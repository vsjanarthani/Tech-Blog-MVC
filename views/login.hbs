<div class="container-fluid">
    <form class="col-4 position-absolute top-50 start-50 translate-middle border border-dark p-10 m-10">
        <!-- Email input -->
        <div class="form-outline m-4">
            <input type="email" id="form1Example1" class="form-control email-login" />
            <label class="form-label" for="form1Example1">Email address</label>
        </div>

        <!-- Password input -->
        <div class="form-outline m-4">
            <input type="password" id="form1Example2" class="form-control password-login" />
            <label class="form-label" for="form1Example2">Password</label>
        </div>

        <!-- Sign up section -->
        <div class="row m-4">
            <div class="col">
                <!-- Simple link -->
                <a id="sign-up" href="/login/signup">Want to Sign up?</a>
            </div>

            <!-- Submit button -->
            <button id="loginbtn" type="submit" class="btn btn-dark btn-block mt-4 p-2">Log in</button>
        </div>
    </form>
</div>

<script src="/script/login.js"></script>