<main>
    <div class="container-fluid p-2 m-2 d-flex flex-column align-self-center">

        {{#if blogs}}
        {{#each blogs}}
        <div class="container d-flex">
            <div class="row border border-dark">
                <div class="col-12 p-2 text-white bg-dark d-flex justify-content-between align-items-baseline">
                    <h5 class="fw-lighter p-2">{{blog_title}}</h5>
                    <h6 class="fst-italic fw-lighter p-2">Posted by {{user.username}} on {{createdAt}}</h6>
                </div>
                <div class="col-12 p-2 justify-content-center">{{blog_contents}}</div>
            </div>
        </div>

        <div class="container d-flex">
            <div class="row p-2">
                <div class="col-12 p-2 justify-content-center">
                    <h6 class="fw-lighter fst-italic">Blog <b>{{blog_title}}</b> has {{comments.length}} comment(s)</h6>
                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}

    </div>
</main>